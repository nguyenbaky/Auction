
<div class="table-wrapper">			
    <div class="table-title">
        <div class="row">
            <div class="col-sm-6">
                <h2>Users <b>Details</b></h2>
            </div>
            <div class="col-sm-6">
                <div class="search-box">
                    <div class="input-group">								
                        <input type="text" id="search" class="form-control" placeholder="Search by Name">
                        <span class="input-group-addon"><i class="material-icons">&#xE8B6;</i></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <table id="myTable" class="table table-striped">
        <thead>
            <tr>
                <th style="width: 15%;">Number</th>
                <th style="width: 25%;">User</th>  
                <th style="width: 25%;">Email</th> 
                <th style="width: 15%;">Level</th>                    
                <th>Actions</th>               
            </tr>
        </thead>
        <tbody>
            <% users.forEach(function(user,index){ %>
                <tr>
                    <td><%- index + 1 %></td>
                    <td name="name"><%- user.username  %></td>
                    <td name="email"><%- user.email %></td>
                    <% if(user.level === 1){ %>
                        <td>
                            <select name="level" disabled>
                                <option value="Bidder">Bidder</option>
                                <option value="Seller">Seller</option>                       
                            </select>
                        </td>
                    <%    }else{ %>
                        <td>
                            <select name="level" disabled>
                                <option value="Seller">Seller</option>
                                <option value="Bidder">Bidder</option>                       
                            </select>
                        </td>
                    <%  }  %>                
                    <td>
                        <a href="#" class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                        <a href="#" class="delete delete_user" title="Delete" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>
                    </td>
                </tr>  
            <% }) %>

        </tbody>
    </table>
    <button type="button" class="btn btn-primary save save_user" >Save</button>
</div>
