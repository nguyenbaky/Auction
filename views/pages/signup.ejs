<form class="login100-form validate-form" action="" method="POST" onsubmit="return check()">
    <span class="login100-form-title p-b-43">
        Register
    </span>

    <div class="wrap-input100 validate-input" data-validate="Name is required">
            <input class="input100" type="text" name="name">
            <span class="focus-input100"></span>
            <span class="label-input100">Name</span>
    </div>

    <div class="wrap-input100 validate-input" data-validate="Username is required">
            <input class="input100" type="text" name="username">
            <span class="focus-input100"></span>
            <span class="label-input100">Username</span>
    </div>

    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
        <input class="input100" type="text" name="email" id="email">
        <span class="focus-input100"></span>
        <span class="label-input100">Email</span>
    </div>
    
    <div class="wrap-input100 validate-input" data-validate="Address is required">
            <input class="input100" type="text" name="address">
            <span class="focus-input100"></span>
            <span class="label-input100">Address</span>
    </div>
    
    <div class="wrap-input100 validate-input" data-validate="Password is required">
        <input class="input100" type="password" name="pass" id="pw">
        <span class="focus-input100" ></span>
        <span class="label-input100" >Password</span>
    </div>

    <div class="wrap-input100 validate-input" data-validate="Password is required" >
            <input class="input100" type="password" name="pass2"id = "pw2">
            <span class="focus-input100"></span>
            <span class="label-input100" >Confirm</span>
        </div>

    <% if(typeof message != "undefined") { %>
        <span style="color: red;"> <%- message %></span>
    <% } %>


    <div class="container-Register100-form-btn" >
        <button class="Register100-form-btn" type="submit">
            Sign Up
        </button>
    </div>

</form>