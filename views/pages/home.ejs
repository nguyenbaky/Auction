<div class="card-body">
  <h2 style="padding:10px;width: 25%;">Sản phẩm sắp kết thúc </h2>
  <div class="row">
    <% P_Old.forEach(function(p,index){ %>    
      <div class="col-sm-3 mb-3">
        <div class="card h-100">
          <img src="upload/<%- p.images[0] %>" alt="ProName" title="ProName" class="card-img-top">
          <div class="card-body">
            <h6 class="card-title"><%- p.name %></h6>
            <h5 class="card-title text-danger"><%- p.Gia_Hien_Tai %></h5>
          </div>
          <div class="card-footer text-center">
            <a class="btn btn-sm btn-outline-primary" href="/chi-tiet-san-pham/<%- p._id %>" role="button">
              <i class="fa fa-eye" aria-hidden="true"></i>
              Details
            </a>
            <% if(typeof user !== "undefined") { %>
              <a class="btn btn-sm btn-outline-danger favorite" href="#" role="button">
                <i class="fa fa-heart" aria-hidden="true"></i>
                Add to favorite
              </a>
            <% } %>            
          </div>
        </div>
      </div>
    <% }) %>
  </div>

  <h2 style="padding:10px;width: 25%;">Sản phẩm có giá cao nhất </h2>
  <div class="row">
    <% P_Highest.forEach(function(p,index){ %>
