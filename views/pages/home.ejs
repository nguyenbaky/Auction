          <div class="card-body">
            <h6 class="card-title">ProName</h6>
            <h5 class="card-title text-danger">1,000,000 đ</h5>
            <p class="card-text">TinyDes</p>
          </div>
          <div class="card-footer text-center">
            <a class="btn btn-sm btn-outline-primary" href="/chi-tiet-san-pham/" role="button">
              <i class="fa fa-eye" aria-hidden="true"></i>
              Details
            </a>
            <% if(typeof user !== "undefined") { %>
              <a class="btn btn-sm btn-outline-danger" href="#" role="button">
                <i class="fa fa-heart" aria-hidden="true"></i>
                Add to favorite
              </a>
            <% } %> 
          </div>
        </div>
      </div>
    <% }) %>  
  </div>

