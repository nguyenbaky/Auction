<base href="http://localhost:8000/">
<nav class="navbar navbar-expand-lg navbar-light " style="background-color:rgb(140, 185, 185);">    
    <a class="navbar-brand" href="#">
        <i class="fa fa-home fa-lg" aria-hidden="true"></i>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
            <a class="nav-link" href="/">Trang chủ<span class="sr-only">(current)</span></a>
        </li>
    
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="/category" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Thể loại
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <% cates.forEach(function(cate,index){ %>
                <a class="dropdown-item" href="/category/<%- cate._id %>/1"><%- cate.name %></a>
            <% }) %>
                
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="#">Something else here</a>
            </div>
        </li>

        <!-- bidder -->
        <% if(typeof user !== "undefined") { %>
            <li class="nav-item active" style="display: none;">
                <a class="nav-link" id="id"><%- user._id %></a>
            </li>

            <li class="nav-item active">
                <a class="nav-link" href="/profile/<%- user._id %>">Thông tin<span class="sr-only">(current)</span></a>
            </li>
  
            <li class="nav-item active">
                <a class="nav-link" href="/auction/<%- user._id %>">Sản phẩm đang đấu giá<span class="sr-only">(current)</span></a>
            </li>
            
            <li class="nav-item active">
                <a class="nav-link" href="/auction/success/<%- user._id %>">Đấu giá thành công<span class="sr-only">(current)</span></a>
            </li>

            <li class="nav-item active">
                <a class="nav-link" href="/favorite/<%- user._id %>">Yêu thích<span class="sr-only">(current)</span></a>
            </li>
             <!-- seller -->
            <% if(user.level === 2) { %>
                <li class="nav-item active">
                    <a class="nav-link" href="/product/<%- user._id %>">Sản phẩm đang bán<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/product/sold/<%- user._id %>">Sản phẩm đã bán<span class="sr-only">(current)</span></a>
                </li>
            <% } %>
        <% } %> 
        </ul>

        <form class="form-inline my-2 my-lg-0">
        <% if(typeof user !== "undefined") { %>
            <% if(user.is_update !== 1){ %> 
                <button type="button" id="upgrade" class="btn btn-success" style="margin: 5px;">Nâng cấp</button>
            <% }else{ %> 
                <button type="button" id="result" class="btn btn-default" style="margin: 5px;">Đã gửi</button>
            <% } %>
        <% } %>     
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0 float-right" type="submit">Search</button>
        </form>

        <% if(typeof user === "undefined") { %>
            <a class="nav-link" href="/login">Sign in</a>
            <a class="nav-link" href="/signup">Sign up</a>
        <% }else{  %>
            <a class="nav-link" href="/logout">Logout</a>
        <% } %>

    </div>
</nav>